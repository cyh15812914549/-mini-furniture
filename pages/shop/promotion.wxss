.ant{
    border:5px solid transparent;
    width: 100%;
    background:linear-gradient(white,white)
    padding-box,
    repeating-linear-gradient(-45deg,red 0,red 25%, yellow 0,yellow 50%) 0 / 3em 3em;
    /*repeating-linear-gradient(-45deg,#58a 0,#58a 25%, yellowgreen 0,yellowgreen 50%) 0 / 3em 3em;*/
    animation:ants 12s linear infinite;
}

@keyframes ants{
    to {
        background-position: 100%
    }
}
